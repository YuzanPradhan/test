@page "/transactionHistory"
@using Coursework_BudgetMate.Service.Interface

<div class="dashboard-container">
    <nav class="sidebar">
        <div class="logo">
            <h1>BudgetMate</h1>
        </div>

        <ul class="nav-links">
            <li><a href="/dashboard">Dashboard</a></li>
            <li><a href="/addtransaction" >Transactions</a></li>
            <li><a href="/debtManagement">Debt Management</a></li>
            <li><a href="/transactionHistory" class="active">Transaction History</a></li>
            <li><a href="/settings">Settings</a></li>
        </ul>
    </nav>

    <div class="main-content">
        <!-- Header -->
        <header class="header">
            <h1>Transaction History</h1>
        </header>

        <div class="content">
            @if (_transactionHistoryList == null || !_transactionHistoryList.Any())
            {
                <p>No transactions found.</p>
            }
            else
            {
                <table class="transactions-table">
                    <thead>
                    <tr>
                        <th>Date</th>
                        <th>Title</th>
                        <th>Amount</th>
                        <th>Tags</th>
                        <th>Note</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var transaction in _transactionHistoryList)
                    {
                        <tr>
                            <td>@transaction.Date</td>
                            <td>@transaction.Title</td>
                            <td>@transaction.Amount.ToString("C")</td>
                            <td>@string.Join(", ", transaction.Tags)</td>
                            <td>@transaction.Note</td>
                        </tr>
                    }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>