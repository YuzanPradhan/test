@page "/debtManagement"
@inject NavigationManager NavigationManager

<div class="page-container">
    <nav class="sidebar">
        <div class="logo">
            <h1>BudgetMate</h1>
        </div>

        <ul class="nav-links">
            <li><a href="/dashboard">Dashboard</a></li>
            <li><a href="/addtransaction" >Transactions</a></li>
            <li><a href="/debtManagement" class="active">Debt Management</a></li>
            <li><a href="/transactionHistory">Transaction History</a></li>
            <li><a href="/settings">Settings</a></li>
        </ul>
    </nav>

    <div class="main-content">
        <div class="header">
            <h2>Debt Management</h2>
            <button class="logout-btn" @onclick="Logout">Logout</button>
        </div>

        <!-- Main Table -->
        <table class="debt-table">
            <thead>
            <tr>
                <th>Debt Source</th>
                <th>Due Date</th>
                <th>Status</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>Car Loan</td>
                <td>2023-12-01</td>
                <td class="overdue">Overdue</td>
            </tr>
            <tr>
                <td>Credit Card</td>
                <td>2023-11-15</td>
                <td>Pending</td>
            </tr>
            <tr>
                <td>Personal Loan</td>
                <td>2023-10-30</td>
                <td>Pending</td>
            </tr>
            </tbody>
        </table>

        <!-- Pending Debts Section -->
        <h2 class="section-title">Pending Debts</h2>
        <div class="debt-cards">
            <div class="debt-card">
                <h3>Car Loan</h3>
                <p>Due Date: 2023-12-01</p>
                <p class="status overdue">Status: Overdue</p>
            </div>
            <div class="debt-card">
                <h3>Credit Card</h3>
                <p>Due Date: 2023-11-15</p>
                <p class="status pending">Status: Pending</p>
            </div>
            <div class="debt-card">
                <h3>Personal Loan</h3>
                <p>Due Date: 2023-10-30</p>
                <p class="status pending">Status: Pending</p>
            </div>
        </div>
    </div>
</div>

@code {
    private void Logout()
    {
        NavigationManager.NavigateTo("/");
    }
}
    